@page 
@model SignupFormModel
@{
    ViewData["Title"] = "Signup Form";
    Layout = "Shared/StandardLayout";
}

<h2> @Model.Message</h2>
<h3>@ViewData["confirmation"]</h3>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="UserDetails.Name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="UserDetails.Name">
        </div>
        <span asp-validation-for="UserDetails.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="UserDetails.Email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="UserDetails.Email">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>